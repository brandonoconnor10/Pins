{
  "name": "pins",
  "author": "Brandon O'Connor",
  "productName": "Pins",
  "version": "1.0.0",
  "description": "Minimal desktop bookmark manager",
  "main": "electron/main.cjs",
  "private": true,
  "type": "module",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dist": "vite build && electron-builder"
  },

  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18"
  },

  "devDependencies": {
    "vite": "^7.2.4",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "cross-env": "^7.0.3"
  },

  "build": {
    "appId": "com.oconnoronly.pins",
    "productName": "Pins",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "electron/assets"
    },
    "win": {
      "icon": "electron/assets/icon.ico",
      "target": "nsis"
    }
  }
}
